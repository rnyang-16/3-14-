

<div class="container-md">
  <div class="row">
    <div class="col-md p-2 m-2">
      <h2>Eat-Da-Burger!</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            <li class="list-group-item">
              {{this.burger_name}}

              <button class="devour-burger btn btn-secondary" data-id="{{this.id}}">
                Devour it!
              </button>
 
              <button class="delete-burger btn btn-secondary" data-id="{{this.id}}">
                Delete!
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md p-2 m-2">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger_name">Burger Name:</label>
          <input type="text" id="burger_name" name="name">
        </div>
        <button type="submit" class="btn btn-primary">Add Burger</button>
      </form>
    </div>
    <div class="col-md p-2 m-2">
      <h2>Burgers that are devoured!</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#if devoured}}
            <li class="list-group-item">
              {{this.burger_name}}
              
              <button class="delete-burger btn btn-secondary" data-id="{{this.id}}">
                Delete!
              </button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>