<h1>Burgers!</h1>

<h2>Eat-Da-Burger!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{name}}

        <button class="devour-burger" data-id="{{this.id}}">
          Devour it!
        </button>

        <button class="delete-burger" data-id="{{this.id}}">
          Delete!
        </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{name}}
        
        <button class="delete-burger" data-id="{{this.id}}">
          Delete!
        </button>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
